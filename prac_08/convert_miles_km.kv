BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_miles
            text: '0'
            multiline: False
            font_size: 48


        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3

            Button:
                text: 'Up'

            Button:
                text: 'Down'

    Button:
        text: 'Convert miles to km'
        on_press: app.handle_convert()

    Label:
        id: output_label
        text: '0.0'
        font_size: 48
        color: (1, 1, 0, 1)
