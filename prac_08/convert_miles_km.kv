BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_miles
            text: '0'
            multiline: False
            font_size: 48
            on_text: app.handle_convert()


        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3

            Button:
                text: 'Up'
                on_press: app.handle_up()

            Button:
                text: 'Down'
                on_press: app.handle_down()

#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_convert()


    Label:
        id: output_label
        text: app.output_km
        font_size: 48
        color: (1, 1, 0, 1)


